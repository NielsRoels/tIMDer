extends ../layout

block content
	div(class="container")
		div(class="row")
			div(class="col-md-4 col-md-offset-4 text-center logo")
				img(src="/images/timdrwhite.svg", alt="tIMDr logo")
				h1(class='text-center') Admin dashboard
		div(class="row")
			div(class='col-md-6')
				div(class='login--block')
					h1 Clear dates
					p All saved dates will be removed from the database.
					span * Warning: * This is permanent, lost data cannot be retreived.
					span(id="clearedDates" class="cleared")
					button(id="clearDate" class='btn btn-default') Clear dates
			div(class='col-md-6')
				div(class='login--block')
					h1 Clear users
					p All users will be removed from the database, except for the admins.
					span * Warning: * This is permanent, lost data cannot be retrieved.
					span(id="clearedUsers" class="cleared")
					button(id="clearUsers" class="btn btn-default") Clear users

	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")