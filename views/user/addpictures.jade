extends ../layout

block content
	div(class="container")
		div(class='row')
			div(class='col-md-4 col-md-offset-4 text-center logo')
				img(src="/images/timdrwhite.svg", alt="tIMDr logo")
		div(class='row')
			div(class='col-md-12')
				form(id="uploadForm" enctype="multipart/form-data" action="/api/photo" method="post")
					input(type="hidden" id="userUpload" value="#{user.username}")
					div(class="form-group col-md-6")
						label Avatar
						span(class="clearfix")
						div(class='input-group')
							span(class="input-group-btn")
								span(class="btn btn-default btn-file") Browse
									input(type='file' id="linkavatar" name='userPhoto')
							input(type='text' class='form-control upload-form')
					div(class="form-group col-md-6")
						label Work 1
						span(class='clearfix')
						div(class='input-group')
							span(class="input-group-btn")
								span(class='btn btn-default btn-file') Browse
									input(type='file' id="linkwork1" name="work1")
							input(type='text' class='form-control upload-form')
					div(class="form-group col-md-6")
						label Work 2
						span(class='clearfix')
						div(class='input-group')
							span(class="input-group-btn")
								span(class='btn btn-default btn-file') Browse
									input(type='file' id="linkwork2" name="work2")
							input(type='text' class='form-control upload-form')
					div(class="form-group col-md-6")
						label Work 3
						span(class='clearfix')
						div(class='input-group')
							span(class="input-group-btn")
								span(class='btn btn-default btn-file') Browse
									input(type='file' id="linkwork3" name="work3")
							input(type='text' class='form-control upload-form')
					div(class="form-group col-md-12")
						button(class='btn btn-default' type='submit') Submit

	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")