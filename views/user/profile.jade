extends ../layout

block content
	div(class='container')
		div(class='row')
			div(class="col-md-4 col-md-offset-4 text-center logo")
				img(src="/images/timdrwhite.svg", alt="tIMDr logo")
				h1(class='text-center') Your profile
		div(class='row')
			div(class="col-md-4 text-center")
				img(src="#{user.pictures[0]}", alt="#{user.firstName} #{user.lastName}" class="profile--img")
			div(class="col-md-4")
				label(class="profile--label") Name
				p(class="profile--p") #{user.firstName} #{user.lastName}
				label(class="profile--label") IMD traject
				p(class="profile--p") #{user.imdTraject}
				label(class="profile--label") Favourite skill
				p(class="profile--p") #{user.skill}
			div(class="col-md-4")
				label(class="profile--label") Portfolio
				p(class="profile--p") #{user.portfolio}
				label(class="profile--label") About me
				p(class="profile--p") #{user.bio}
			div(class="clearfix")
			div(class='col-md-8 col-md-offset-4')
				label(class="profile--label") My works
				div(class="row")
					img(src="#{user.pictures[1]}", alt="#{user.firstName} #{user.lastName}" class="col-md-4 profile--workimg")
					img(src="#{user.pictures[2]}", alt="#{user.firstName} #{user.lastName}" class="col-md-4 profile--workimg")
					img(src="#{user.pictures[3]}", alt="#{user.firstName} #{user.lastName}" class="col-md-4 profile--workimg")
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")