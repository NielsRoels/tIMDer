extends ../layout

block content
	div(class="container")
		div(class="row")
			div(class="col-md-4 col-md-offset-4 text-center logo")
				img(src="/images/timdrwhite.svg", alt="tIMDr logo")
				h1(class='text-center') Who are you?
		div(class="row")
			div(class='col-md-6 col-ms-6 col-xs-12')
				div(class='login--block')
					h1 Student
					p IMD students can create an account or log in to their existing one here. Once logged in, students can edit their profiles or check who wants to 'date' them.
					a(href='/login' class="btn btn-default") Proceed as student 
			div(class='col-md-6 col-ms-6 col-xs-12')
				div(class='login--block')
					h1 Organization
					p If you're member of a company, you can start the tIMDr-experience right here, right now. Fill in your company name and start swiping through our student profiles.
					a(href='/company' class="btn btn-default") Find your match

	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")