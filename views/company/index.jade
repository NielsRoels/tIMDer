extends ../layout

block content
	div(class="container")
		div(class="row logo")
			div(class="col-md-4 col-md-offset-4 text-center")
				img(src="/images/timdrwhite.svg", alt="tIMDr logo")
			div(class="col-md-6 col-md-offset-3 text-center")
				h1 Fill in your company name
		div(class="row")
			div(class='col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 login--block')
				form(class='profileform' id="companyForm")
					h1 Company name
					p Fill in your company name here, this name will be displayed on our date-page.
					input(id="company" name="company" type="text" class='form-control' placeholder="Company name" required)
					button(type="submit" class="btn btn-default" id="companyFormbtn") Start swiping!
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")